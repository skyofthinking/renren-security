<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.renren.modules.oss.dao.SysOssDao">

    <select id="queryObject" resultType="io.renren.modules.oss.entity.SysOssEntity">
		select * from sys_oss where uid = #{value}
	</select>

    <select id="queryList" resultType="io.renren.modules.oss.entity.SysOssEntity">
        select * from sys_oss order by create_date desc
    </select>

    <select id="queryTotal" resultType="int">
		select count(*) from sys_oss 
	</select>

    <insert id="save" parameterType="io.renren.modules.oss.entity.SysOssEntity" useGeneratedKeys="true"
            keyProperty="id">
		insert into sys_oss
		(
		    uid,
			url, 
			create_date
		)
		values
		(
		    #{uid},
			#{url}, 
			#{createDate}
		)
	</insert>

    <update id="update" parameterType="io.renren.modules.oss.entity.SysOssEntity">
        update sys_oss
        <set>
            <if test="url != null">url = #{url},</if>
            <if test="createDate != null">create_date = #{createDate}</if>
        </set>
        where uid = #{uid}
    </update>

    <delete id="delete">
		delete from sys_oss where uid = #{value}
	</delete>

    <delete id="deleteBatch">
        delete from sys_oss where uid in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>